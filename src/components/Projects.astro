import MySQL from "./icons/MySQL.astro";
import AstroIcon from "./icons/Astro.astro";
import JSON from "./icons/Json.astro";
import JetpackCompose from "./icons/JetPackCompose.astro";
import Icon from "./icons/Icon.astro";

const TAGS = {
    JAVASCRIPT:{
        name: "JavaScript",
        class: "bg-sky-100/20 text-white",
        icon: JavaScriptIcon,
    },
    HTML:{
        name: "HTML",
        class: "bg-sky-100/20 text-white",
        icon: HTMLIcon,
    },
    CSS:{
        name:"Tailwind",
        class: "bg-sky-100/20 text-white",
        icon: CSSIcon,
    },
    TAILWIND:{
        name:"Tailwind",
        class: "bg-sky-100/20 text-white",
        icon: TailwindIcon,
    },
    LARAVEL:{
        name: "Laravel",
        class: "bg-sky-100/20 text-white",
        icon: LaravelIcon,
    },
    GIT:{
        name: "GIT",
        class: "bg-sky-100/20 text-white",
        icon: GitIcon,
    },
    PHP:{
        name:"PHP",
        class: "bg-sky-100/20 text-white",
        icon: PhpIcon,
    },
    MYSQL:{
        name:"MySQL",
        class: "bg-sky-100/20 text-white",
        icon: MySQL,
    },
    ASTRO:{
        name: "ASTRO",
        class: "bg-sky-100/20 text-white",
        icon: AstroIcon,
    },
    JSON:{
        name:"JSON",
        class: "bg-sky-100/20 text-white",
        icon: JSON,
    },
    JETPACKCOMPOSE:{
        name:"JETPACKCOMPOSE",
        class: "bg-sky-100/20 text-white",
        icon: JetpackCompose,
    }
}

const PROJECTS = [
    /*{
        title: "Conversor Binario",
