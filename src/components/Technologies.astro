        class: "bg-sky-100/20 text-white",
        icon: Node,
    },
    {
        name:"React",
        class: "bg-sky-100/20 text-white",
        icon: React,
    }
]

---
<article class="flex gap-3 flex-wrap pb-16 justify-start sm:gap-6 sm:justify-center">
{
   
    TAGS.map((tag) => (
            <div class="border border-white/10 rounded-md py-1 px-5 bg-blue-100/10 backdrop-blur-lg sm:py-5 sm:px-10">
                <span class="flex gap-2 items-center text-lg ">{tag.name}</span>
            </div>
    ))

}
</article>
