import IntellIJ from "./icons/IntellIJ.astro";
import Java from "./icons/Java.astro";
import Node from "./icons/Node.astro";
import React from "./icons/React.astro";



const TAGS = [
    {
        name: "JavaScript",
        class: "bg-sky-100/20 text-white",
        icon: JavaScriptIcon,
    },
    {
        name: "HTML",
        class: "bg-sky-100/20 text-white",
        icon: HTMLIcon,
    },
    {
        name:"CSS",
        class: "bg-sky-100/20 text-white",
        icon: CSSIcon,
    },
    {
        name:"Tailwind",
        class: "bg-sky-100/20 text-white",
        icon: TailwindIcon,
    },
    {
        name: "Laravel",
        class: "bg-sky-100/20 text-white",
        icon: LaravelIcon,
    },
    {
        name: "GIT",
        class: "bg-sky-100/20 text-white",
        icon: GitIcon,
    },
    {
        name:"PHP",
        class: "bg-sky-100/20 text-white",
        icon: PhpIcon,
    },
    {
        name:"MySQL",
        class: "bg-sky-100/20 text-white",
        icon: MySQL,
    },
    {
        name: "GITHUB",
        class: "bg-sky-100/20 text-white",
        icon: Github,
    },
    {
        name:"Astro",
        class: "bg-sky-100/20 text-white",
        icon: Astro,
    },
    {
        name:"Firebase",
        class: "bg-sky-100/20 text-white",
        icon: Firebase,
    },
    {
        name:"Flutter",
        class: "bg-sky-100/20 text-white",
        icon: Flutter,
    },
    {
        name:"IntellIJ",
        class: "bg-sky-100/20 text-white",
